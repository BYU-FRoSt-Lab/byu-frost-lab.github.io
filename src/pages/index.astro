---
import Layout from '~/layouts/PageLayout.astro';

import Hero3 from '~/components/widgets/Hero3.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Home | FROST Lab',
  ignoreTitleTemplate: true,
  heroOverlap: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero3
    actions={[
      {
        variant: 'primary',
        text: 'See our research',
        href: 'https://github.com/arthelokyo/astrowind',
        target: '_blank',
        icon: 'tabler:robot',
      },
      { text: 'Meet the team', href: '/people' },
    ]}
    image={{ src: '~/assets/images/heron.jpeg', alt: 'FROST Lab Hero Image' }}
  >
    <Fragment slot="title">
      FROST Lab
      <!-- <span class="hidden xl:inline">d websites with</span> -->
      <!-- <span class="text-accent dark:text-white"> Astro 5.0</span> + Tailwind CSS -->
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <!-- <span class="font-semibold">FROSTY</span>  -->
        The Field Robotic Systems Lab at Brigham Young University</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">The Field Robotics Systems Lab</span>

    </Fragment>
  </Hero3>

  <!-- Note Widget ******************* -->

  <!-- <Note title="Philosophy:" description="Simplicity, Best Practices and High Performance" /> -->

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Our Vision"
    title="What is the FROST Lab?"
  subtitle="The Field Robotic Systems Lab (FRoSt Lab) at Brigham Young University is focused on enabling the development of <strong>robust and reliable</strong> field-robotic systems that are able to <strong>consistently</strong> <em>perceive, navigate, and perform work</em> in complex unstructured real-world environments."
    items={[
      {
        title: 'Robotic Perception',
        description:
          'Algorithms and sensor fusion that allow robots to interpret camera, lidar and IMU data to understand their surroundings in real time.',
        icon: 'tabler:camera',
      },
      {
        title: 'Robotic Localization, Mapping, and SLAM',
        description:
          'Techniques for determining a robotâ€™s pose and building consistent maps of unknown environments for reliable navigation.',
        icon: 'tabler:map',
      },
      {
        title: 'Non-linear State-Estimation',
        description:
          'Robust filtering and smoothing (EKF/UKF/graph-based) for estimating vehicle and sensor states under noise and uncertainty.',
        icon: 'tabler:calculator',
      },
      {
        title: 'Task and Motion Planning',
        description:
          'Planning algorithms that generate safe, feasible motion trajectories and high-level task sequences for autonomous operation.',
        icon: 'tabler:route',
      },
      {
        title: 'Hardware/Software-based Algorithm Acceleration',
        description:
          'Using optimized implementations, GPU/FPGA acceleration, and system-level co-design to meet real-time constraints in the field.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Multi-agent Systems',
        description:
          'Cooperative algorithms for coordination, communication and distributed decision-making among multiple robotic agents.',
        icon: 'tabler:users',
      },
    ]}
  />


</Layout>
